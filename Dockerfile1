# Use a base image that includes Maven or install Maven manually
FROM maven:3.8.6-openjdk-17 as builder

# Set the working directory
WORKDIR /app

# Copy the Maven project files into the container
COPY . .

# Build the project
RUN mvn clean package -DskipTests=true

# Use Tomcat base image
FROM tomcat:9-jdk17

# Remove default webapps and logs
RUN rm -rf /usr/local/tomcat/webapps/* && \
    rm -rf /usr/local/tomcat/logs/*

# Copy the WAR file from the Maven build
COPY --from=builder /app/target/petclinic.war /usr/local/tomcat/webapps/

# Expose port 8080 and start Tomcat
EXPOSE 8080
CMD ["catalina.sh", "run"]
